{
  "name": "@webrtc-toolbox/sdp-parser",
  "version": "1.0.1",
  "description": "SDP parsing/printing library, implemented based on the JavaScript Session Establishment Protocol(JSEP).",
  "main": "./dist/index.js",
  "types": "./dist/sdp-parser.d.ts",
  "scripts": {
    "dev": "rm -rf dist && tsc --watch --inlineSourceMap",
    "build": "rm -rf declaration && webpack --config webpack.config.js && tsc --emitDeclarationOnly && api-extractor run --local --verbose",
    "test": "jest"
  },
  "author": "VicNing",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@microsoft/api-extractor": "^7.18.4",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "lint-staged": {
    "(src|tests)/**/*.ts": [
      "eslint -f codeFrame --quiet",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "files": [
    "dist"
  ]
}
